<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <settings>
        <!-- 这个配置使全局的映射器启用或禁用 缓存 -->
        <setting name="cacheEnabled" value="true" />
        <!-- 使用 jdbc 的getGeneratedKeys 获取数据库的自增主键值 -->
        <setting name="useGeneratedKeys" value="true"/>
        <!-- 使用列的别名来替换列名 默认为true-->
        <setting name="useColumnLabel" value="true"/>
        <setting name="logImpl" value="STDOUT_LOGGING"/>
    </settings>

    <typeAliases>
        <typeAlias type="com.drp.data.entity.AdminUser" alias="adminUser" />
        <typeAlias type="com.drp.data.entity.Category" alias="category" />
        <typeAlias type="com.drp.data.entity.Goods" alias="goods" />
        <typeAlias type="com.drp.data.entity.GoodsStock" alias="goodsStock" />
        <typeAlias type="com.drp.data.entity.GoodsStockLog" alias="goodsStockLog" />
        <typeAlias type="com.drp.data.entity.Menu" alias="menu" />
        <typeAlias type="com.drp.data.entity.OperationCode" alias="operationCode" />
        <typeAlias type="com.drp.data.entity.OperationLog" alias="operationLog" />
        <typeAlias type="com.drp.data.entity.Order" alias="order" />
        <typeAlias type="com.drp.data.entity.OrderGoods" alias="orderGoods" />
        <typeAlias type="com.drp.data.entity.Relation" alias="relation" />
        <typeAlias type="com.drp.data.entity.Role" alias="role" />
        <typeAlias type="com.drp.data.entity.Shop" alias="shop" />

        <typeAlias type="com.drp.data.entity.dto.CategoryDto" alias="categoryDto" />
        <typeAlias type="com.drp.data.entity.dto.GoodsDto" alias="goodsDto" />
        <typeAlias type="com.drp.data.entity.dto.OrderGoodsDto" alias="orderGoodsDto" />
    </typeAliases>

</configuration>